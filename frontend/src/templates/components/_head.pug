//-
    Head

//Define Unicode
meta(charset="utf-8")

if baseUrl
    //Define Base URL Address
    base(href=baseUrl)

//Define a Compatibility with IE
meta(http-equiv="x-ua-compatible" content="ie=edge")

//Define Flexible Viewport for Mobile Devices
meta(name="viewport" content="width=device-width, initial-scale=1")

//Phone Numbers Detection
meta(name="format-detection" content="telephone=no")

//Search Engine Optimization Sources
title= data.title
meta(name="description" content=data.description)
meta(name="keywords" content=data.keywords)
meta(name="author" content=data.author)
if facebookApps.appId
    meta(property="fb:app_id" content=facebookApps.appId)
meta(property="og:url" content=host)
meta(property="og:type" content="website")
meta(property="og:title" content=data.ogTitle)
meta(property="og:description" content=data.ogDescription)
meta(property="og:image" content=host + "tile-1200x630px.png")
meta(name="robots" content="index, follow, noodp, noydir")

//Web application manifest which provides information about an application
link(rel="manifest" href="manifest.json")

//Icon Sources
link(rel="apple-touch-icon" href="apple-touch-icon.png")

//Google Chrome - Theme Color
meta(name="theme-color" content=themeColor)

