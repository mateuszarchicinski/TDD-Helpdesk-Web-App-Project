include ../../helpers/_mixins

//-
    PL - User Service

- var user = data.section.user;

+serviceView("user", true, data.section.helpdesk.services.user)
    div(layout-gt-sm="row" layout-align="center start")
        div(flex-gt-sm="85" layout="column" class="md-whiteframe-z1 flat-panel")
            md-toolbar(class="flat-panel__toolbar flat-panel__header")
                header(class="md-toolbar-tools")
                    img(ng-src="{{UC.user.pictures[0] || 'images/icons/person_white.png'}}" class="user-avatar")
                    h3(style="margin-left: 8px") User information
            md-content(layout-padding class="flat-panel__body")
                form(name="userForm" novalidate layout="column" class="user-form UF" ng-submit="userForm.$invalid || UC.userForm.submit($event)")
                    md-input-container
                        label(for="UFFN") First name
                        input(id="UFFN" name="firstName" ng-model="UC.user.firstName" type="text" ng-disabled="true")
                    md-input-container
                        label(for="UFLN") Last name
                        input(id="UFLN" name="lastName" ng-model="UC.user.lastName" type="text" ng-disabled="true")
                    md-input-container
                        label(for="UFFN") Full name
                        input(id="UFFN" name="fullName" ng-model="UC.user.fullName" type="text" ng-disabled="true")
                    md-input-container
                        label(for="UFG") Gender
                        md-select(id="UFG" name="gender" ng-model="UC.user.gender" ng-disabled="true")
                            md-option(value="male") Male
                            md-option(value="female") Female
                        div(class="md-errors-spacer")
                    md-input-container
                        label(for="UFE") Email
                        input(id="UFE" name="email" ng-model="UC.user.email" type="email" ng-disabled="true")
                    md-input-container
                        label(for="UFIP") Password set
                        input(id="UFIP" name="isPassword" ng-model="UC.user.isPassword" type="test" ng-disabled="true")
                    md-input-container
                        label(for="UFR") Role
                        input(id="UFR" name="role" ng-model="UC.user.role" type="test" ng-disabled="true")
                    div(layout="row" layout-align="center center" layout-wrap)
                        md-button(type="submit" class="btn btn-primary") Update
                        md-button(ng-click="UC.userForm.delete()" class="btn btn-warn") Delete