    PL - Register

//Register View
section(layout="row" layout-align="center" class="form-view")
    div(flex-xs="100" layout="column" class="md-whiteframe-z1 form-view__container")
        md-toolbar(class="form-view__toolbar")
            header.md-toolbar-tools
                h2 #{data.section.register.headline}
        md-content(layout-padding)
            form(name="registerForm" layout="column" novalidate)
                md-input-container
                    label #{data.section.register.form.name.value}
                    input(name="name" ng-model="name" type="text" required pattern="^[A-ZĄĆĘŁŃÓŚŹŻ]{1}[a-ząćęłńóśźż]{1,50}$")
                    div(ng-messages="registerForm.name.$error" role="alert")
                        div(ng-message="required") #{data.section.register.form.name.errors.required}
                        div(ng-message="pattern") #{data.section.register.form.name.errors.pattern}
                md-input-container
                    label #{data.section.register.form.email.value}
                    input(name="email" ng-model="email" type="email" required)
                    div(ng-messages="registerForm.email.$error" role="alert")
                        div(ng-message="email") #{data.section.register.form.email.errors.email}
                        div(ng-message="required") #{data.section.register.form.email.errors.required}
                md-input-container
                    label #{data.section.register.form.password.value}
                    input(name="password" ng-model="password" type="password" required ng-minlength="8" ng-maxlength="25")
                    div(ng-messages="registerForm.password.$error" role="alert")
                        div(ng-message="required") #{data.section.register.form.password.errors.required}
                        div(ng-message="minlength") #{data.section.register.form.password.errors.minLength}
                        div(ng-message="maxlength") #{data.section.register.form.password.errors.maxLength}
                md-input-container
                    label #{data.section.register.form.confirmPassword.value}
                    input(name="confirmPassword" ng-model="confirmPassword" type="password" required ng-minlength="8" ng-maxlength="25")
                    div(ng-messages="registerForm.confirmPassword.$error" role="alert")
                        div(ng-message="required") #{data.section.register.form.confirmPassword.errors.required}
                        div(ng-message="minlength") #{data.section.register.form.confirmPassword.errors.minLength}
                        div(ng-message="maxlength") #{data.section.register.form.confirmPassword.errors.maxLength}
                p(class="form-view__terms-conditions text-center text-muted")
                    small #{data.section.register.copy[0]} 
                        a(ng-href="#" rel="help") #{data.section.register.copy[1]}
                        |  #{data.section.register.copy[2]} 
                        a(ng-href="#" rel="help") #{data.section.register.copy[3]}
                        | .
                md-button(type="submit" ng-click="registerForm.$invalid || RC.registerForm.submit()" class="btn btn-primary") #{data.section.register.form.submitBtn}
            p(class="text-center text-muted")
                small #{data.section.register.copy[4]} 
                    a(ng-href="#" rel="help") #{data.section.register.copy[5]}