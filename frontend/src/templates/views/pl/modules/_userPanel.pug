//-
    PL - User Panel

div(ng-controller="userPanelController as UPC" class="user-panel")
    img(ng-src="{{user.pictures[0]}}" alt="{{user.firstName}} {{user.lastName}}" class="user-panel__user-image")
    span(ng-if="user.fullName" class="md-body-1 user-panel__user-fullname") Hi, {{user.fullName}}!
    md-menu(md-position-mode="right bottom")
        md-button(ng-click="$mdMenu.open($event)" aria-label=data.section.modules.userPanel.ariaLabels[0] class="md-icon-button user-panel__icon-button")
        md-menu-content
            md-menu-item
                md-button(ng-click="UPC.userGo('myAccount')") #{data.section.modules.userPanel.menuItems[0]}
            md-menu-item
                md-button(ng-click="UPC.userGo('logout')") #{data.section.modules.userPanel.menuItems[1]}